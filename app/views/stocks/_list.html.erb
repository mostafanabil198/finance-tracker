<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if current_user.id == @user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @user.stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to "unfollow", user_stock_path(stock), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-xs btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
